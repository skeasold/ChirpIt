<%= form_for @post do |f| %>
    <form>
      <div class="row">
        <div class="input-field col s12">
          <%= f.label :title %><br>
          <%= f.text_field :title %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <%= f.label :content %><br>
          <%= f.text_area :content, :class => "materialize-textarea" %>
        </div>
      </div>
      <%= f.submit class: "waves-effect waves-light btn grey lighten-1 left z-depth-0" %>
    </form>
<% end %>
